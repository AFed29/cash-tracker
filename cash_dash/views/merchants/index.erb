<table>
  <thead>
    <tr>
      <th>Merchant</th>
    </tr>
  </thead>
  <tbody>
    <% @merchants.each do |merchant| %>
    <tr>
      <td><%= merchant.name %></td>
      <td><a href="/merchants/<%= merchant.id %>/edit">Edit Merchant</a></td>
      <td>
        <form method="post" action="/merchants/<%= merchant.id %>/delete">
          <input type="submit" value="Delete Merchant">
        </form>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<form method="post" action="/merchants">
  <label for="new-merchant">Enter a new Merchant:</label>
  <input id="new-merchant" type="text" name="name">
  <input type="submit" value="Add new merchant">
</form>
