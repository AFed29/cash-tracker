<a href="/transactions/total">Total spent</a>
<table>
  <thead>
    <tr>
      <th>Merchant</th>
      <th>Category</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each do |transaction| %>
    <tr>
      <td><%= transaction.merchant().name %></td>
      <td><%= transaction.category().name %></td>
      <td><%= Transaction.display_pounds_pence(transaction.amount.to_i) %></td>
      <td>
        <a href="/transactions/<%= transaction.id %>/edit">Edit Transaction</a>
      </td>
      <td>
        <form method="post" action="/transactions/<%= transaction.id %>/delete">
          <input type="submit" value="Delete Transaction">
        </form>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
