<form method="post" action="/transactions">
  <label for="merchant-id">Select a merchant:</label>
  <select id="merchant-id" name="merchant_id">
    <% @merchants.each do |merchant| %>
    <option value="<%= merchant.id %>"><%= merchant.name %></option>
    <% end %>
  </select>
  <label for="category-id">Select a category:</label>
  <select id="category-id" name="category_id">
    <% @categories.each do |category| %>
    <option value="<%= category.id %>"><%= category.name %></option>
    <% end %>
  </select>
  <label for="amount">Enter Amount: Â£</label>
  <input id="amount" type="number" name="amount" step="0.01">
  <input type="submit" value="Add this Transaction">
</form>
